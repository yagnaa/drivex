<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="SELECT BUDGET"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/min_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:padding="10dp"
            android:text="MIN\n6L"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/max_text_view"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="10dp"
            android:text="MAX\n6Cr"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </FrameLayout>

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/rangebar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        custom:barWeight="2dp"
        custom:connectingLineColor="@color/colorPrimary"
        custom:connectingLineWeight="2dp"
        custom:pinColor="#ffffffff"
        custom:pinRadius="0dp"
        custom:rangeBarColor="#60ffffff"
        custom:selectorColor="@android:color/white"
        custom:selectorSize="15dp"
        custom:temporaryPins="false"
        custom:tickColor="#00000000"
        custom:tickEnd="100"
        custom:tickInterval="2"
        custom:tickStart="2" />


    <Button

        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow"
        android:padding="15dp"
        android:text="6 L - 6 Cr"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

</LinearLayout>